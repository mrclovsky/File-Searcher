<Window x:Class="PT_lab_2.Dialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PT_lab_2"
        mc:Ignorable="d"
        Title="File Creator" Height="400" Width="350">
    <Grid>
        <Label Margin="40,40,210,275">Name:</Label>
        <TextBox x:Name="fileName" Margin="90,45,40,295"/>
        <RadioButton x:Name="fileButton" Margin="120,70,140,250">File</RadioButton>
        <RadioButton x:Name="directoryButton" Margin="180,70,60,250">Directory</RadioButton>
        <Label Margin="60,110,210,220">Attributes:</Label>
        <CheckBox x:Name="readOnlyCheckBox" Margin="80,140,60,200">ReadOnly</CheckBox>
        <CheckBox x:Name="archiveCheckBox" Margin="80,160,60,180">Archive</CheckBox>
        <CheckBox x:Name="hiddenCheckBox" Margin="80,180,60,160">Hidden</CheckBox>
        <CheckBox x:Name="systemCheckBox" Margin="80,200,60,140">System</CheckBox>
        <Button x:Name="okButton" Margin="70,260,170,70" Click="OkButtonClick">OK</Button>
        <Button x:Name="cancelButton" Margin="170,260,70,70" Click="CancelButtonClick">Cancel</Button>
    </Grid>
</Window>
